<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/FirstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/LastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/EmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Login Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Role"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="User Role" />

    <Spinner
        android:id="@+id/UserRoleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/SaveChangeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Change"
        tools:text="Save Change" />

    <Button
        android:id="@+id/RemoveUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove User"
        android:textColor="@android:color/holo_red_light"
        tools:text="Remove User" />
</LinearLayout>
